# Django Backend Environment Variables
# Copy this file to .env and update with your actual values

# Django Configuration
DEBUG=True
SECRET_KEY=your-super-secret-django-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://vulnpilot:vulnpilot_password@localhost:5432/vulnpilot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Tools Configuration
NMAP_PATH=/usr/bin/nmap
NIKTO_PATH=/usr/local/bin/nikto
SQLMAP_PATH=/usr/local/bin/sqlmap
GOBUSTER_PATH=/usr/local/bin/gobuster

# Wordlist Paths
WORDLIST_DIR=/usr/share/wordlists
COMMON_WORDLIST=/usr/share/wordlists/dirb/common.txt

# Scan Configuration
SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=5
SCAN_RESULTS_DIR=/app/scans

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# API Configuration
API_RATE_LIMIT=100/hour
API_THROTTLE_RATE=10/min
